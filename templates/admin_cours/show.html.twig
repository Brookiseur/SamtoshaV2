{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cour.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ cour.type }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ cour.tarif }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cour.description }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ cour.lieu }}</td>
            </tr>
            <tr>
                <th>HoraireDeDebut</th>
                <td>{{ cour.horaireDeDebut ? cour.horaireDeDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HoraireDeFin</th>
                <td>{{ cour.horaireDeFin ? cour.horaireDeFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ cour.day }}</td>
            </tr>
            <tr>
                <th>ParticipantMin</th>
                <td>{{ cour.participantMin }}</td>
            </tr>
            <tr>
                <th>ParticipantMax</th>
                <td>{{ cour.participantMax }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_cours_index') }}">back to list</a>

    <a href="{{ path('app_admin_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('admin_cours/_delete_form.html.twig') }}
{% endblock %}
